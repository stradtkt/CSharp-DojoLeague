@model DojoLeague.Models.Ninja
@{
    ViewData["Title"] = "Ninjas";
}

<div class="row">
    <div class="col-6 col-md-6 col-lg-6 col-xl-6">
        <table class="table table-hover text-center">
            <thead class="bg-info text-white">
                <tr>
                    <th>Ninja Name</th>
                    <th>Ninja Dojo</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var n in ViewBag.ninjas)
                {
                    <tr>
                        <td><a href="">@n.name</a></td>
                        <td><a href="">@n.Dojos.location</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-6 col-md-6 col-lg-6 col-xl-6">
        <h3 class="text-center">Register A Ninja</h3>
        <form asp-action="RegisterANinja" asp-controller="Home" method="POST">
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="name"></span>
                </div><br>
                <input asp-for="name" class="form-control" placeholder="Ninja Name">
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="level"></span>
                </div><br>
                <select asp-for="level" class="form-control">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </div>
            <div class="form-group">
                <select asp-for="dojo_id" class="form-control">
                    @foreach (var d in ViewBag.dojos)
                    {
                        <option value="@d.dojo_id">@d.location</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <div class="bg-danger">
                    <span asp-validation-for="description"></span>
                </div><br>
                <textarea asp-for="description" cols="30" rows="10" class="form-control" placeholder="Description"></textarea>
            </div>
            <input type="submit" value="Add Ninja" class="btn btn-round btn-success">
        </form>
    </div>
</div>